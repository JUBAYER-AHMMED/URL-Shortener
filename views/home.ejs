<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Page</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
  </head>
  <body class="text-center">
    <div class="container">
      <h1 class="my-4">URL Shortener</h1>
      <% if (locals.id) { %>
      <div class="alert alert-success">
        URL Generated: http://localhost:8001/url/<%= id %>
      </div>
      <% } %>

      <form action="/url" method="post" class="mb-4">
        <div class="mb-3">
          <label for="urlInput" class="form-label"
            >Enter your original URL</label
          >
          <input
            type="text"
            class="form-control"
            id="urlInput"
            name="url"
            placeholder="https://example.com"
          />
        </div>
        <button type="submit" class="btn btn-primary">Generate</button>
      </form>

      <a href="/" class="btn btn-secondary">All Visit History</a>

      <div style="margin-top: 50px">
        <% if (locals.allUrls) { %>
        <table class="table table-striped mt-4">
          <thead>
            <tr>
              <th>#</th>
              <th>ShortID</th>
              <th>Redirect</th>
              <th>Clicks</th>
            </tr>
          </thead>
          <tbody>
            <% allUrls.forEach((url, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= url.shortID %></td>
              <td><%= url.redirectURL %></td>
              <td><%= url.visitHistory.length %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% } %>
      </div>
      <form action="/logout" method="get" class="mt-4">
        <button type="submit" class="btn btn-danger">Logout</button>
      </form>
    </div>
    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
